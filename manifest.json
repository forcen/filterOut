{
    "manifest_version": 2,
    "name": "FilterOut",
    "version": "0.1",
    "description": "Filters out unwanted content.",
    "icons": { "128": "icon.png" },
    "default_locale": "en",
    "background": { "scripts": ["dom.js", "background.js"] },
    "content_scripts": [{ "matches": ["<all_urls>"], "js": ["content_script.js"]}],
    "permissions": ["tabs"],
    "browser_action": {
        "default_icon": {"128": "icon.png"},
        "default_title": "__MSG_extName__",
        "default_popup": "popup.html"
    },
    "content_security_policy": "default-src 'none'; style-src 'self'; script-src 'self'"
}